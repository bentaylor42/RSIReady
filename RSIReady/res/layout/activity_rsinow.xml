<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rsiready.rsiready.RSINow" >

    <fragment
        android:id="@+id/PreO2timer"
        android:name="com.rsiready.rsiready.Fragment_PreO2_Clock"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/tabRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />
    
    <LinearLayout
        android:id="@+id/tabRow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >
        
        	<Button
        	    android:id="@+id/buttonIndications"
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:background="@drawable/red_indications_tab_selected" />
        	
        	<Button
        	    android:id="@+id/buttonDrugs"
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:background="@drawable/red_drug_tab_deselected" />
        	
        	<Button
        	    android:id="@+id/buttonEquipment"
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:background="@drawable/red_equipment_tab_deselected" />
        	
        	<Button
        	    android:id="@+id/buttonTeam"
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:background="@drawable/red_team_tab_deselected" />
        	
        	<Button
        	    android:id="@+id/buttonFinal"
        	    android:layout_width="0dp"
        	    android:layout_height="match_parent"
        	    android:layout_weight="1"
        	    android:background="@drawable/red_final_tab_deselected" />
        
    </LinearLayout>

    <Button
        android:id="@+id/buttonDisplayWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/displayWeight" />

    <fragment
        android:id="@+id/fragment1"
        android:name="com.rsiready.rsiready.IndicationsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/PreO2timer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttonDisplayWeight" />
    
</RelativeLayout>
